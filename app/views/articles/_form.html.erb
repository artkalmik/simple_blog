<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "ошибка") %> не позволяет сохранить страницу:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title, 'Название статьи' %><br>
    <%= f.text_field :title, size: "100x1" %>
  </p>
 
  <p>
    <%= f.label :text, 'Текст' %><br>
    <%= f.text_area :text, size: "100x20" %>
  </p>
 
  <p>
    <%= f.submit 'Сохранить' %>
  </p>
 
<% end %>