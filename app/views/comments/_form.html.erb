<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter, 'Прокомментировал' %><br>
    <%= f.text_field :commenter, size: "30x1" %>
  </p>
  <p>
    <%= f.label :body, 'Содержимое' %><br>
    <%= f.text_area :body, size: "50x10" %>
  </p>
  <p>
    <%= f.submit 'Сохранить комментарий' %>
  </p>
<% end %>